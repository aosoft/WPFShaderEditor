<Window
  x:Class="WPFShaderEditor.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:l="clr-namespace:WPFShaderEditor"
  mc:Ignorable="d"
  Title="MainWindow" Height="450" Width="800">
  <Grid>
    <Grid Background="Black">
      <Grid.Effect>
        <l:CustomShaderEffect Bytecode="{Binding Path=Bytecode.Value}" />
      </Grid.Effect>
    </Grid>
    <TextBox
      Background="Transparent"
      FontSize="16"
      Foreground="White"
      CaretBrush="White"
      AcceptsReturn="True"
      TextWrapping="Wrap"
      VerticalScrollBarVisibility="Auto"
      Text="{Binding Path=Source.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
      <TextBox.Effect>
        <DropShadowEffect Color="Black" />
      </TextBox.Effect>
    </TextBox>
    <TextBlock
      Background="Transparent"
      FontSize="16"
      Foreground="Red"
      HorizontalAlignment="Left"
      VerticalAlignment="Bottom"
      TextWrapping="Wrap"
      Text="{Binding Path=ErrorMessage.Value}">
      <TextBlock.Effect>
        <DropShadowEffect Color="Black" />
      </TextBlock.Effect>
    </TextBlock>
  </Grid>
</Window>
